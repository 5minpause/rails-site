<!DOCTYPE html>
<html>
  <head>
    <title>Workspace</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main class="container mx-auto mt-28 px-5 flex">
      <div class="flex-col w-full">
        <% if @display_sessions_links %>
          <div class="mx-auto w-full mb-12 grid">
            <% if signed_in? %>
              <span class="justify-self-start">Signed in as: <%= current_user.email %></span>
              <%= button_to 'Sign out', sign_out_path, {method: :delete, form_class: "justify-self-end"} %>
            <% else %>
              <%= link_to 'Sign in', sign_in_path %>
            <% end %>
          </div>
        <% end %>

        <div class="flex flex-col sm:flex-row">
          <%= render "layouts/flash" %>
          <div class="mx-auto w-full sm:w-1/3 flex flex-col">
            <%= render "layouts/navigation" %>
          </div>
          <div class="mx-auto w-full sm:w-2/3 flex">
            <%= yield %>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
