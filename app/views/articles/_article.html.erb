<% if action_name == "show" || @static_page %>
  <div class="relative bg-white overflow-hidden">
    <div class="relative px-4 sm:px-6 lg:px-8">
      <div class="text-lg max-w-prose mx-auto">
        <h1>
          <span class="block text-3xl text-center leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl"><%= article.title %></span>
        </h1>
      </div>
      <div class="mt-6 prose prose-indigo prose-lg text-gray-500 mx-auto">
        <%= @markdown.render(article.content).html_safe %>
      </div>
    </div>
  </div>
<% else %>
  <li>
    <article class="">
      <div class="flex flex-row <%= first_article == article ? '' : 'my-12' %>">
        <div class="w-full">
          <div class="relative bg-white overflow-hidden">
            <div class="relative px-4 sm:px-6 lg:px-8">
              <div>

              </div>
              <div class="text-lg max-w-prose mx-auto">
                <%= link_to "/#{article.slug}", class: "inline-block w-full" do %>
                  <h3 class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                    <%= article.title %>
                  </h3>
                  <h2 class="text-sm text-indigo-600 font-semibold tracking-wide uppercase">
                    <%= l(article.published_at, format: "%d.%m.%Y") %>
                  </h2>
                <% end %>
              </div>
              <div class="mt-6 prose prose-indigo prose-lg text-gray-500 mx-auto">
                <%= @markdown.render(article.content).html_safe %>
                <%= link_to "read more", "/#{article.slug}" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>
  </li>
<% end %>
