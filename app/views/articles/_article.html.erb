<% if action_name == "show" %>
  <div class="relative py-16 bg-white overflow-hidden">
    <div class="relative px-4 sm:px-6 lg:px-8">
      <div class="text-lg max-w-prose mx-auto">
        <h1>
          <span class="mt-2 block text-3xl text-center leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl"><%= article.title %></span>
        </h1>
      </div>
      <div class="mt-6 prose prose-indigo prose-lg text-gray-500 mx-auto">
        <%= @markdown.render(article.content).html_safe %>
      </div>
    </div>
  </div>
<% else %>
  <li>
    <article>
      <div class="flex flex-row">
        <div class="basis-3/4">
          <div class="relative py-16 bg-white overflow-hidden">
            <div class="relative px-4 sm:px-6 lg:px-8">
              <div class="text-lg max-w-prose mx-auto">
                <%= link_to "/#{article.slug}", class: "inline-block w-full" do %>
                  <h3>
                    <span class="mt-2 block text-3xl text-left leading-8 font-extrabold tracking-tight text-gray-900 sm:text-3xl"><%= article.title %></span>
                  </h3>
                <% end %>
              </div>
              <div class="mt-6 prose prose-indigo prose-lg text-gray-500 mx-auto">
                <%= @markdown.render(article.content).html_safe %>
                <%= link_to "read more", "/#{article.slug}" %>
              </div>
            </div>
          </div>
        </div>
        <div id="<%= dom_id article %>" class="basis-1/4 grid justify-items-end">
          <div class="">
            <%= link_to 'Edit this article', edit_article_path(article), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      </div>
    </article>
  </li>
<% end %>
